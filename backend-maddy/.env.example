# HeartChain Backend Environment Variables
# Copy this file to .env and fill in the values

# ============== MongoDB ==============
MONGODB_URL=mongodb://localhost:27017
DB_NAME=heartchain_db

# ============== Encryption ==============
# AES-256-GCM requires a 32-byte key (64 hex characters)
# Generate a new key with: python -c "import secrets; print(secrets.token_hex(32))"
# IMPORTANT: Keep this key secure! If lost, encrypted data cannot be recovered.
ENCRYPTION_KEY=

# ============== IPFS ==============
# IPFS node API endpoint (for uploading)
IPFS_API_URL=http://localhost:5001

# IPFS gateway URL (for retrieving)
IPFS_GATEWAY_URL=http://localhost:8080/ipfs

# ============== File Upload ==============
# Maximum file size in MB
MAX_FILE_SIZE_MB=10
